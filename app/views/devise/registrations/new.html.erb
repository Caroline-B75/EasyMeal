<% content_for :head do %>
  <%= stylesheet_link_tag "authentication", "data-turbo-track": "reload" %>
<% end %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Créer un compte</h1>
      <p class="auth-subtitle">Rejoignez EasyMeal et simplifiez vos repas</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-fields">
        <!-- Username -->
        <div class="form-group">
          <%= f.input :username,
                      required: true,
                      autofocus: true,
                      input_html: { 
                        class: 'form-input',
                        autocomplete: "username",
                        placeholder: "Choisissez un nom d'utilisateur"
                      },
                      label_html: { class: 'form-label' },
                      wrapper_html: { class: 'input-wrapper' } %>
        </div>

        <!-- First Name & Last Name (side by side) -->
        <div class="form-row">
          <div class="form-group form-group-half">
            <%= f.input :first_name,
                        required: true,
                        input_html: { 
                          class: 'form-input',
                          autocomplete: "given-name",
                          placeholder: "Votre prénom"
                        },
                        label_html: { class: 'form-label' },
                        wrapper_html: { class: 'input-wrapper' } %>
          </div>

          <div class="form-group form-group-half">
            <%= f.input :last_name,
                        required: true,
                        input_html: { 
                          class: 'form-input',
                          autocomplete: "family-name",
                          placeholder: "Votre nom"
                        },
                        label_html: { class: 'form-label' },
                        wrapper_html: { class: 'input-wrapper' } %>
          </div>
        </div>

        <!-- Email -->
        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      input_html: { 
                        class: 'form-input',
                        autocomplete: "email",
                        placeholder: "votre.email@exemple.com"
                      },
                      label_html: { class: 'form-label' },
                      wrapper_html: { class: 'input-wrapper' } %>
        </div>

        <!-- Password -->
        <div class="form-group">
          <%= f.input :password,
                      required: true,
                      hint: "Minimum 6 caractères",
                      input_html: { 
                        class: 'form-input',
                        autocomplete: "new-password",
                        placeholder: "••••••••"
                      },
                      label_html: { class: 'form-label' },
                      wrapper_html: { class: 'input-wrapper' } %>
        </div>

        <!-- Password Confirmation -->
        <div class="form-group">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { 
                        class: 'form-input',
                        autocomplete: "new-password",
                        placeholder: "••••••••"
                      },
                      label_html: { class: 'form-label' },
                      wrapper_html: { class: 'input-wrapper' } %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="form-actions">
        <%= f.button :submit, "Créer mon compte", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <!-- Footer Links -->
    <div class="auth-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
