<% content_for :title, "Ingrédients" %>

<div class="ingredients-container">
  <div class="ingredients-header">
    <h1>Mes ingrédients</h1>
    <% if policy(Ingredient).create? %>
      <%= link_to "Nouvel ingrédient", new_ingredient_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <!-- Filtres et recherche -->
  <div class="ingredients-filters">
    <%= form_with url: ingredients_path, method: :get, class: "search-form", data: { turbo_frame: "ingredients_list" } do |f| %>
      <div class="search-group">
        <%= f.text_field :query, 
            value: params[:query], 
            placeholder: "Rechercher un ingrédient...", 
            class: "search-input" %>
        
        <%= f.select :category,
            options_for_select(
              Ingredient.categories.map { |k, v| [Ingredient.human_attribute_name("category.#{k}"), k] },
              params[:category]
            ),
            { include_blank: "Tous les rayons" },
            class: "filter-select" %>
        
        <%= f.select :month,
            options_for_select(
              (1..12).map { |m| [Date::MONTHNAMES[m], m] },
              params[:month]
            ),
            { include_blank: "Tous les mois" },
            class: "filter-select" %>
        
        <label class="season-checkbox">
          <%= f.check_box :seasonal, {}, "true", nil %>
          <span>Ingrédients de saison</span>
        </label>
        
        <%= f.submit "Rechercher", class: "btn btn-secondary" %>
        
        <% if params[:query].present? || params[:category].present? || params[:month].present? || params[:seasonal].present? %>
          <%= link_to "Réinitialiser", ingredients_path, class: "btn btn-link" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Table des ingrédients -->
  <%= turbo_frame_tag "ingredients_list" do %>
    <% if @ingredients.any? %>
      <div class="table-container">
        <table class="ingredients-table">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Rayon</th>
              <th>Saison</th>
              <th class="actions-column">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @ingredients.each do |ingredient| %>
              <tr>
                <td class="ingredient-name-cell" data-label="Nom">
                  <strong><%= ingredient.name %> <span class="unit-inline">(<%= ingredient.base_unit %>)</span></strong>
                  <% if ingredient.aliases.present? %>
                    <small class="aliases"><%= ingredient.aliases.is_a?(Array) ? ingredient.aliases.join(', ') : ingredient.aliases.values.join(', ') %></small>
                  <% end %>
                </td>
                <td data-label="Rayon">
                  <span class="category-badge category-<%= ingredient.category %>">
                    <%= Ingredient.human_attribute_name("category.#{ingredient.category}") %>
                  </span>
                </td>
                <td data-label="Saison">
                  <% if ingredient.season_months.present? && ingredient.season_months.length == 12 %>
                    <span class="text-muted">Toute l'année</span>
                  <% elsif ingredient.season_months.present? %>
                    <div class="season-months">
                      <% ingredient.season_months.sort.each do |month| %>
                        <span class="month-tag"><%= Date::ABBR_MONTHNAMES[month] %></span>
                      <% end %>
                    </div>
                  <% end %>
                </td>
                <td class="actions-cell" data-label="Actions">
                  <% if policy(ingredient).edit? %>
                    <%= link_to edit_ingredient_path(ingredient), class: "icon-btn edit-btn", title: "Modifier", data: { turbo_frame: "_top" } do %>
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                      </svg>
                    <% end %>
                  <% end %>
                  <% if policy(ingredient).destroy? %>
                    <%= button_to ingredient_path(ingredient), 
                        method: :delete, 
                        class: "icon-btn delete-btn",
                        title: "Supprimer",
                        form: { style: "display: inline;", onsubmit: "showDeleteModal(event); return false;" } do %>
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                      </svg>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination Pagy -->
      <div class="pagination-container">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="empty-state">
        <p>Aucun ingrédient trouvé.</p>
        <% if policy(Ingredient).create? %>
          <%= link_to "Créer le premier ingrédient", new_ingredient_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<!-- Modal de confirmation de suppression -->
<%= render "shared/delete_confirmation_modal" %>

<style>
  /* === Charte graphique EasyMeal === */
  
  body {
    background: #F8F6F3;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    color: #4A4A4A;
  }

  .ingredients-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .ingredients-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .ingredients-header h1 {
    font-size: 2rem;
    font-weight: 600;
    color: #3D3D3D;
    margin: 0;
  }

  /* === Filtres === */
  .ingredients-filters {
    background: white;
    padding: 1.5rem;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    margin-bottom: 2rem;
  }

  .search-form {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .search-group {
    display: flex;
    gap: 1rem;
    flex: 1;
    align-items: center;
    flex-wrap: wrap;
  }

  .search-input {
    flex: 1;
    min-width: 250px;
    padding: 0.75rem 1rem;
    border: 2px solid #E8E4DF;
    border-radius: 12px;
    font-size: 1rem;
    background: white;
    color: #3D3D3D;
    transition: all 0.2s;
  }

  .search-input:focus {
    outline: none;
    border-color: #C8444B;
    box-shadow: 0 0 0 3px rgba(200, 68, 75, 0.1);
  }

  .filter-select {
    padding: 0.75rem 1rem;
    border: 2px solid #E8E4DF;
    border-radius: 12px;
    font-size: 1rem;
    background: white;
    color: #3D3D3D;
    transition: all 0.2s;
    min-width: 180px;
  }

  .filter-select:focus {
    outline: none;
    border-color: #C8444B;
  }

  .season-checkbox {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 12px;
    background: #FAF8F5;
    cursor: pointer;
    user-select: none;
  }

  .season-checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: #C8444B;
  }

  .season-checkbox span {
    font-size: 0.875rem;
    font-weight: 500;
    color: #3D3D3D;
  }

  /* === Table === */
  .table-container {
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .ingredients-table {
    width: 100%;
    border-collapse: collapse;
  }

  .ingredients-table thead {
    background: #FAF8F5;
  }

  .ingredients-table th {
    padding: 1rem 1.5rem;
    text-align: left;
    font-weight: 600;
    color: #3D3D3D;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 2px solid #E8E4DF;
  }

  .ingredients-table td {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #F3F0EC;
  }

  .ingredients-table tbody tr:hover {
    background: #FAF8F5;
  }

  .ingredients-table tbody tr:last-child td {
    border-bottom: none;
  }

  .ingredient-name-cell strong {
    color: #3D3D3D;
    font-size: 1rem;
    font-weight: 600;
  }

  .ingredient-name-cell .aliases {
    color: #6B6B6B;
    font-style: italic;
    font-size: 0.875rem;
  }

  .category-badge {
    padding: 0.375rem 0.875rem;
    border-radius: 24px;
    font-size: 0.75rem;
    font-weight: 600;
    background: #F5A855;
    color: white;
    white-space: nowrap;
    display: inline-block;
  }

  .season-months {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
    background: transparent;
  }

  .month-tag {
    padding: 0.25rem 0.5rem;
    border-radius: 8px;
    font-size: 0.7rem;
    font-weight: 600;
    background: #E6D5C3;
    color: #8B7355;
  }

  .text-muted {
    color: #9CA3AF;
    font-style: italic;
    font-size: 0.875rem;
  }

  .actions-column {
    width: 120px;
    text-align: center;
  }

  .actions-cell {
    text-align: center;
  }

  .icon-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    border: none;
    background: transparent;
    cursor: pointer;
    transition: all 0.2s;
    margin: 0 0.25rem;
    padding: 0;
    color: #6B6B6B;
  }

  .icon-btn:hover {
    background: #FAF8F5;
  }

  .edit-btn:hover {
    color: #F5A855;
    background: rgba(245, 168, 85, 0.1);
  }

  .delete-btn:hover {
    color: #C8444B;
    background: rgba(200, 68, 75, 0.1);
  }

  /* === Empty state === */
  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .empty-state p {
    font-size: 1.125rem;
    color: #6B6B6B;
    margin-bottom: 1.5rem;
  }

  /* === Boutons (Charte EasyMeal) === */
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn-primary {
    background: #C8444B;
    color: white;
  }

  .btn-primary:hover {
    background: #A63940;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(200, 68, 75, 0.3);
    color: white;
    text-decoration: none;
  }

  .btn-secondary {
    background: #F5A855;
    color: white;
  }

  .btn-secondary:hover {
    background: #E89A3C;
  }

  .btn-link {
    background: transparent;
    color: #C8444B;
    padding: 0.5rem 1rem;
  }

  .btn-link:hover {
    text-decoration: underline;
  }

  /* === Pagination === */
  .pagination-container {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  /* Cibler la nav Pagy */
  .pagination-container nav {
    display: flex;
    gap: 0.5rem; /* Espacement entre les éléments */
    align-items: center;
  }

  /* Tous les spans dans la pagination */
  .pagination-container nav span {
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.875rem;
    transition: all 0.2s;
    min-width: 38px;
    text-align: center;
    display: inline-block;
  }

  /* Flèches prev/next avec espacement supplémentaire */
  .pagination-container nav span.prev,
  .pagination-container nav span.next {
    margin: 0 0.5rem; /* Espacement supplémentaire pour les flèches */
  }

  /* Liens dans la pagination */
  .pagination-container nav a {
    color: #4A4A4A;
    text-decoration: none;
    border-radius: 8px;
    display: inline-block;
    min-width: 24px;
    text-align: center;
    transition: all 0.2s;
  }

  /* Hover sur les numéros de page */
  .pagination-container nav span.page a:hover {
    background: #E8E4DF; /* Couleur beige EasyMeal au survol */
  }

  /* Hover sur les flèches */
  .pagination-container nav span.prev a:hover,
  .pagination-container nav span.next a:hover {
    background: #F5A855; /* Couleur orange EasyMeal au survol */
    color: white;
  }

  /* Page active (courante) */
  .pagination-container nav span.page.active {
    background: #C8444B; /* Couleur rouge EasyMeal */
    color: white;
    font-weight: 600;
  }

  /* Éléments désactivés */
  .pagination-container nav span.page.disabled,
  .pagination-container nav span.prev.disabled,
  .pagination-container nav span.next.disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Gap (points de suspension ...) */
  .pagination-container nav span.gap {
    color: #6B6B6B;
    cursor: default;
  }

  /* === RESPONSIVE DESIGN === */
  
  /* Mobile (< 768px) */
  @media (max-width: 767px) {
    .ingredients-container {
      padding: 1rem 0.75rem;
    }

    .ingredients-header {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }

    .ingredients-header h1 {
      font-size: 1.5rem;
      text-align: center;
    }

    .btn-primary {
      width: 100%;
      text-align: center;
    }

    /* Filtres en colonne sur mobile */
    .ingredients-filters {
      padding: 1rem;
    }

    .search-group {
      flex-direction: column;
      gap: 0.75rem;
    }

    .search-input,
    .filter-select {
      width: 100%;
      min-width: 100%;
      font-size: 16px; /* Évite le zoom sur iOS */
    }

    .season-checkbox {
      width: 100%;
      justify-content: center;
    }

    .btn-secondary,
    .btn-link {
      width: 100%;
    }

    /* Table en mode carte COMPACTE sur mobile */
    .table-container {
      overflow-x: visible;
      box-shadow: none;
      background: transparent;
    }

    .ingredients-table {
      display: block;
      border: none;
    }

    .ingredients-table thead {
      display: none;
    }

    .ingredients-table tbody {
      display: block;
    }

    .ingredients-table tr {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-areas:
        "header"
        "badges";
      background: white;
      border-radius: 12px;
      padding: 1rem;
      margin-bottom: 0.75rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      gap: 0.5rem;
    }

    .ingredients-table td {
      padding: 0;
      border: none;
    }

    /* Masquer tous les labels data-label */
    .ingredients-table td::before {
      display: none;
    }

    /* === HEADER : Nom (avec sous-titre) + Actions === */
    .ingredient-name-cell {
      grid-area: header;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 0.5rem;
      padding: 0 !important;
      margin: 0 !important;
      border: none;
    }

    .ingredient-name-cell strong {
      font-size: 1.0625rem;
      font-weight: 600;
      color: #3D3D3D;
      line-height: 1.3;
      flex: 1;
    }

    /* Unité inline après le nom */
    .ingredient-name-cell .unit-inline {
      font-size: 0.875rem;
      font-weight: 400;
      font-style: italic;
      color: #6B6B6B;
    }

    /* Sous-titre (Alias) en italic sous le nom */
    .ingredient-name-cell .aliases {
      display: block;
      font-size: 0.75rem;
      color: #9CA3AF;
      font-style: italic;
      font-weight: 400;
      margin-top: 0.125rem;
      line-height: 1.2;
    }

    /* Actions dans le header à droite */
    .actions-cell {
      grid-area: header;
      display: inline-flex;
      gap: 0.375rem;
      padding: 0 !important;
      margin: 0 !important;
      border: none;
      align-self: flex-start;
      justify-self: flex-end;
    }

    .icon-btn {
      width: 32px;
      height: 32px;
      border-radius: 6px;
      background: #FAF8F5;
      flex-shrink: 0;
    }

    .icon-btn svg {
      width: 14px;
      height: 14px;
    }

    .icon-btn:hover {
      background: #E8E4DF;
    }

    /* === LIGNE BADGES : Catégorie + Unité + Saison === */
    .ingredients-table td[data-label="Rayon"],
    .ingredients-table td[data-label="Unité"],
    .ingredients-table td[data-label="Saison"] {
      display: inline-flex;
      margin-right: 0.5rem;
      margin-bottom: 0;
      align-items: center;
    }

    /* Badge catégorie (orange) */
    .category-badge {
      font-size: 0.6875rem;
      padding: 0.25rem 0.625rem;
      background: #F5A855;
      color: white;
    }

    /* Badge unité (gris) */
    .ingredients-table td[data-label="Unité"] {
      font-size: 0.6875rem;
      padding: 0.25rem 0.625rem;
      background: #E8E4DF;
      color: #6B6B6B;
      border-radius: 24px;
      font-weight: 600;
    }

    .ingredients-table td[data-label="Unité"]::before {
      display: none;
    }

    /* Saison inline */
    .ingredients-table td[data-label="Saison"] {
      display: inline-flex;
      flex-wrap: wrap;
      gap: 0.25rem;
    }

    .season-months {
      display: inline-flex;
      gap: 0.25rem;
    }

    .month-tag {
      font-size: 0.625rem;
      padding: 0.125rem 0.375rem;
    }

    .text-muted {
      font-size: 0.6875rem;
      color: #9CA3AF;
      font-style: italic;
      font-weight: 400;
    }

    .empty-state {
      padding: 2rem 1rem;
    }

    .empty-state p {
      font-size: 1rem;
    }
  }

  /* Tablette (768px - 1024px) */
  @media (min-width: 768px) and (max-width: 1024px) {
    .ingredients-container {
      padding: 1.5rem 1rem;
    }

    .search-group {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.75rem;
    }

    .search-input {
      grid-column: 1 / -1;
    }

    .table-container {
      overflow-x: auto;
    }

    .ingredients-table {
      min-width: 700px;
    }

    .ingredients-table th,
    .ingredients-table td {
      padding: 0.875rem 1rem;
      font-size: 0.9375rem;
    }
  }

  /* Améliorer la pagination sur mobile */
  @media (max-width: 767px) {
    .pagination-container {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      padding: 0.5rem 0;
    }

    .pagy-nav {
      justify-content: flex-start;
      min-width: min-content;
    }

    .pagy-nav .page,
    .pagy-nav .prev,
    .pagy-nav .next {
      min-width: 40px;
      min-height: 40px;
      font-size: 0.875rem;
    }
  }
</style>
