<% content_for :title, "Modifier l'ingrédient" %>

<div class="form-container">
  <div class="form-header">
    <h1>Modifier l'ingrédient</h1>
    <%= link_to "← Retour", ingredients_path, class: "btn-link" %>
  </div>

  <div class="form-card">
    <%= render "form", ingredient: @ingredient %>
  </div>
</div>

<style>
  body {
    background: #F8F6F3;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .form-container {
    max-width: 600px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .form-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .form-header h1 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #3D3D3D;
    margin: 0;
  }

  .form-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .btn-link {
    color: #C8444B;
    text-decoration: none;
    font-weight: 600;
  }

  .btn-link:hover {
    text-decoration: underline;
  }

  /* === RESPONSIVE DESIGN === */
  @media (max-width: 767px) {
    .form-container {
      margin: 1rem auto;
      padding: 0 0.75rem;
    }

    .form-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }

    .form-header h1 {
      font-size: 1.5rem;
    }

    .form-card {
      padding: 1.5rem;
    }

    .btn-link {
      font-size: 0.9375rem;
    }
  }

  @media (min-width: 768px) and (max-width: 1024px) {
    .form-container {
      max-width: 700px;
    }
  }
</style>
